{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"lib": ["es2016"],
		"outDir": "temp",
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"removeComments": true,
		"sourceMap": false,
		"pretty": true
	},
	"include": [
		"references.d.ts",
		"typings/**/*.ts",
		"src/**/*.ts"
	],
	"exclude": [
		"app",
		"lib",
		"platforms",
		"plugin",
		"node_modules",
		"src/node_modules"
	]
}

