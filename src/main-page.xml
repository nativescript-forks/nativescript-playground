<Page loaded="onLoaded" navigatedTo="{{ onNavigatedTo }}">

    <Page.actionBar>
        <ActionBar title="Playground"></ActionBar>
    </Page.actionBar>

    <GridLayout id="main_layout" rows="auto,*">

        <StackLayout id="top_stack" row="0" class="stack" height="200">
            <Button class="" text="Top Do It" tap="{{ onTopDoIt }}" />
        </StackLayout>

        <StackLayout id="bottom_stack" row="1" class="stack">
            <Button class="" text="Bottom Do It" tap="{{ onBottomDoIt }}" />
        </StackLayout>

    </GridLayout>

</Page>

