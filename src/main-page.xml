<Page loaded="onLoaded" navigatedTo="onNavigatedTo">

    <Page.actionBar>
        <ActionBar title="Charts Playground">

        </ActionBar>
    </Page.actionBar>

    <GridLayout rows="auto,*">

        <StackLayout>
            <Button class="dev btn btn-huge" text="Do Its" tap="doit" />
        </StackLayout>

        <StackLayout row="1" id="chart_wrapper" class="dev">
            <Placeholder id="chart" creatingView="onCreatingView" />
        </StackLayout>

    </GridLayout>

</Page>

