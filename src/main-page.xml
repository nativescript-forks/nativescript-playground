<Page loaded="onLoaded" unloaded="onUnloaded">

    <Page.actionBar>
        <ActionBar title="Playground">
        </ActionBar>
    </Page.actionBar>

    <GridLayout rows="*">

        <DockLayout row="0">
            <StackLayout dock="top">
                <Button class="button-large" text="Build It" tap="{{ doit }}" />
                <Button class="button-large" text="Toggle It" tap="{{ toggleit }}" />
            </StackLayout>
        </DockLayout>

    </GridLayout>

</Page>

